<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_panel_height">

        <Button
            android:id="@+id/back"
            style="@style/HeaderButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:icon="@drawable/back"
            />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp">

            <TextView
                style="@style/TitleTextStyle"
                android:layout_marginStart="@dimen/header_panel_title_margin_start"
                android:layout_marginTop="@dimen/header_panel_title_margin_top"
                android:text="@string/settings_label" />
        </FrameLayout>
    </LinearLayout>

    <com.google.android.material.switchmaterial.SwitchMaterial
        style="@style/MaterialTextViewStyle"
        android:layout_marginTop="24dp"
        android:text="@string/settings_theme_label"
        android:textAppearance="@style/TitleTextStyle"
        android:paddingVertical="0dp"
        android:paddingEnd="17dp"
        android:checked="true"
        android:contentDescription="@string/settings_theme_label"/>

    <com.google.android.material.textview.MaterialTextView
        style="@style/MaterialTextViewStyle"
        android:drawableEnd="@drawable/share"
        android:text="@string/settings_share_label" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/MaterialTextViewStyle"
        android:drawableEnd="@drawable/support"
        android:text="@string/settings_support_label" />

    <com.google.android.material.textview.MaterialTextView
        style="@style/MaterialTextViewStyle"
        android:drawableEnd="@drawable/arrow"
        android:text="@string/settings_user_agreement_label" />


</LinearLayout>