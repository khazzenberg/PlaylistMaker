<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="?attr/colorPrimary">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_panel_height">

    <Button
        android:id="@+id/back"
        style="@style/HeaderButtonStyle"
        app:icon="@drawable/ic_back_arrow_24"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            style="@style/TitleTextStyle"
            android:layout_marginStart="@dimen/header_panel_title_margin_start"
            android:layout_marginTop="@dimen/header_panel_title_margin_top"
            android:text="@string/search_label" />
    </FrameLayout>
</LinearLayout>

<LinearLayout
    style="@style/SettingsListLinearLayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp">
        <EditText
            android:id="@+id/inputSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLines="1"
            android:hint="@string/search_label"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_search_16"
            android:drawableTint="?attr/editTextColorTextHint"
            android:drawablePadding="8dp"
            android:textColor="?attr/editTextColorText"
            android:textColorHint="?attr/editTextColorTextHint" />
        <ImageView
            android:id="@+id/buttonClearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_clear_16"
            android:contentDescription="@string/clear_search"
            android:visibility="gone"
            app:tint="?attr/editTextColorTextHint" />
    </FrameLayout>

</LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/padding_medium"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


        <LinearLayout
            android:id="@+id/emptyState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_large">

            <ImageView
                android:id="@+id/emptyImage"
                android:layout_width="@dimen/image_state"
                android:layout_height="@dimen/image_state"
                android:src="@drawable/ic_no_found_120"
                android:contentDescription="@string/nothing_found" />

            <TextView
                android:id="@+id/emptyText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/nothing_found"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_size_19" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/errorState"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone"
            android:paddingTop="@dimen/padding_large">

            <ImageView
                android:id="@+id/errorImage"
                android:layout_width="@dimen/image_state"
                android:layout_height="@dimen/image_state"
                android:src="@drawable/ic_no_internet_120"
                android:contentDescription="@string/network_error" />

            <TextView
                android:id="@+id/errorTitle"
                style="@style/TextViewErrorStyle"
                android:text="@string/network_error" />

            <TextView
                android:id="@+id/errorSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginHorizontal="24dp"
                android:gravity="center"
                android:text="@string/try_internet"
                android:fontFamily="@font/ys_display_medium"
                android:textColor="?attr/colorOnSecondary"
                android:textSize="@dimen/text_size_19" />

            <Button
                android:id="@+id/updateButton"
                style="@style/ButtonSearchStyle"
                android:text="@string/retry" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/historyLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top|center_horizontal"
            android:orientation="vertical"
            android:visibility="gone">
            <TextView
                android:text="@string/you_find"
                style="@style/TextViewErrorStyle"
                android:paddingTop="24dp"
                android:paddingBottom="8dp"/>
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerHistoryView"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginTop="@dimen/padding_medium"
                app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />
            <Button
                android:id="@+id/clearButton"
                style="@style/ButtonSearchStyle"
                android:text="@string/clear_history"/>
        </LinearLayout>

    </FrameLayout>

</LinearLayout>