<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:orientation="vertical"
android:background="?attr/colorPrimary">

<LinearLayout
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="@dimen/header_panel_height">

    <Button
        android:id="@+id/back"
        style="@style/HeaderButtonStyle"
        app:icon="@drawable/ic_back_arrow_24"
        />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp">

        <TextView
            style="@style/TitleTextStyle"
            android:layout_marginStart="@dimen/header_panel_title_margin_start"
            android:layout_marginTop="@dimen/header_panel_title_margin_top"
            android:text="@string/search_label" />
    </FrameLayout>
</LinearLayout>

<LinearLayout
    style="@style/SettingsListLinearLayoutStyle">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="8dp"
        android:paddingHorizontal="16dp">
        <EditText
            android:id="@+id/inputSearchText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:hint="@string/search_label"
            android:inputType="text"
            android:background="@drawable/edittext_background"
            android:drawableStart="@drawable/ic_search_16"
            android:drawableTint="?attr/editTextColorTextHint"
            android:drawablePadding="8dp"
            android:textColor="?attr/editTextColorText"
            android:textColorHint="?attr/editTextColorTextHint" />
        <ImageView
            android:id="@+id/buttonClearSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="12dp"
            android:src="@drawable/ic_clear_16"
            android:contentDescription="@string/clear_search"
            android:visibility="gone"
            app:tint="?attr/editTextColorTextHint" />
    </FrameLayout>

</LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/padding_medium"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager" />


</LinearLayout>