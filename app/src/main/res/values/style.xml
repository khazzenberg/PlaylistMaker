<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="TitleTextStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
    </style>

    <style name="SettingsListTextViewStyle" parent="Widget.MaterialComponents.TextView">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/settings_text_size</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:paddingStart">16dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>
    
    <style name="SettingsListLinearLayoutStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">61dp</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="SettingsIconLayoutStyle">
        <item name="android:layout_width">@dimen/settings_icon_size</item>
        <item name="android:layout_height">@dimen/settings_icon_size</item>
        <item name="android:orientation">vertical</item>
        <item name="android:layout_marginStart">8dp</item>
        <item name="android:layout_marginEnd">12dp</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:gravity">center_horizontal|center_vertical</item>
    </style>

    <style name="SettingsSwitchStyle" parent="SettingsListTextViewStyle">
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="SettingsIconStyle">
        <item name="android:tint">?attr/colorPrimaryVariant</item>
    </style>

    <style name="HeaderButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:minWidth">@dimen/header_panel_button_size</item>
        <item name="android:minHeight">@dimen/header_panel_button_size</item>
        <item name="android:layout_width">@dimen/header_panel_button_size</item>
        <item name="android:layout_height">@dimen/header_panel_button_size</item>
        <item name="android:layout_marginVertical">@dimen/header_panel_button_margin</item>
        <item name="android:layout_marginStart">@dimen/header_panel_button_margin</item>
        <item name="android:layout_marginEnd">0dp</item>
        <item name="android:backgroundTint">?attr/colorPrimary</item>
        <item name="android:textSize">0sp</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconSize">@dimen/icon_size</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="checkedIconMargin">4dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="MainMenuButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_marginTop">@dimen/button_margin</item>
        <item name="android:layout_marginHorizontal">@dimen/button_margin</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="cornerRadius">16dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconTint">@color/black</item>
        <item name="iconPadding">8dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textFontWeight">500</item>
    </style>

    <style name="TrackViewStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">?attr/colorTertiary</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textFontWeight">400</item>
        <item name="android:textSize">@dimen/text_size_11</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="TextViewErrorStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginTop">@dimen/padding_medium</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorOnSecondary</item>
        <item name="android:textSize">19sp</item>
    </style>

    <style name="ButtonSearchStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:paddingVertical">10dp</item>
        <item name="android:backgroundTint">?attr/colorOnSecondary</item>
        <item name="cornerRadius">54dp</item>
    </style>
</resources>